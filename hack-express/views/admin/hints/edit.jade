extends ../admin_layout

block admin_content
  form(method='post', action='/admin/hints/#{hint._id}')
      input(type="hidden", name="_method", value="put")
      fieldset
          legend Edit Hint
          label Title
          input(type="text", name="title", placeholder="Enter Hint Title", value="#{hint.title}")
          label Description
          input(type="textarea", name="description", value="#{hint.description}")
          label.checkbox Revealed
            input(type="checkbox", name="revealed", checked=(#{hint.revealed} === true ? "checked" : undefined))
        div.form-actions
            button(type="submit").btn.btn-primary Save changes
            a(href="/admin/hints").btn.btn-link Cancel
