extends layout

//-  div.container
//-    div.fluid-container
//-      div.row-fluid

block content
  
  div.span9.well.bs-docs.sidebar
    h2 Notes
    ul(data-tabs="tabs").nav.nav-tabs#tabs
      li
        a(href='#user-notes', data-toggle='tab') User
      li
        a(href='#team-notes', data-toggle='tab') Team
    
    div.tab-content#tab-content
      div.tab-pane#user-notes
        form(method="post", action='/notes/submit')
          input(type="hidden", name="user_id", value="#{user._id}")
          textarea(rows='25', wrap='hard', name='notes', placeholder='User Notes')
            | #{user_notes}
          button(type='submit').btn.btn-primary Save
      
      div.tab-pane#team-notes
        div.tabbable
          ul(data-tabs="tabs").nav.nav-tabs#user-tabs
            each team_member in team_notes.members
              li
                a(href="##{team_notes.members.indexOf(team_member)}", data-toggle="tab") #{team_member.username}
          
          div.tab-content
            each team_member in team_notes.members
              div(id="#{team_notes.members.indexOf(team_member)}").tab-pane
                textarea(rows='25', wrap='hard', name='notes', readonly="readonly")
                  | #{team_member.notes}


  include includes/sponsors
