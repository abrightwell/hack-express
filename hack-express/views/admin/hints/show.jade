extends ../admin_layout

block admin_content
    fieldset
        legend View Hint
        label Title
        input(type="text", name="title", placeholder="Enter Hint Title", value="#{hint.title}", readonly='readonly')
        label Description
        input(type="textarea", name="description", value="#{hint.description}", readonly='readonly')
        label.checkbox Revealed
          input(type="checkbox", name="revealed", checked=(#{hint.revealed} === true ? "checked" : undefined), readonly='readonly')
      div.form-actions
          a(href="/admin/hints").btn.btn-link Back
