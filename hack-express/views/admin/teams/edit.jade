extends ../admin_layout

block admin_content
  form(method='post', action='/admin/teams/#{team._id}')
      input(type="hidden", name="_method", value="put")
      fieldset
          legend Edit Team
          label Team Name
          input(type="text", name="name", placeholder="Enter Team Name", value="#{team.name}")
          label Team Members
          input(type="textarea")
          label Team Captain
          select 
      div.form-actions
          button(type="submit").btn.btn-primary Save changes
          button(type="cancel")#cancel.btn Cancel