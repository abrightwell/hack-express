extends ../admin_layout

block admin_content
  form(method='post', action='/admin/teams')
      fieldset
          legend Create New Team
          label Name
          input(type="text", name="name", placeholder="Enter Team Name", value="#{team.name}", autofocus)
          div.form-actions
            button(type="submit").btn.btn-primary Create
            a(href="/admin/teams", style="margin-left: 5px", type="cancel").btn.btn-link Cancel
