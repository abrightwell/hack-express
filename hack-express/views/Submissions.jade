extends layout

//-  div.container
//-    div.fluid-container
//-      div.row-fluid

block content
  
  div.span9.well.bs-docs.sidebar
    h2 Submissions
    
    form.form-inline(method='post', action='/submissions/submit')
      input(type='password', name='tokenID', placeholder="Enter Token ID", autofocus)
      span.icon-bar
      button.btn(type='submit') Submit
    div
      table.table.table-striped
        thead
          tr
            th Token
            th Description
            th Points
        tbody
          each token in tokens
            tr
              td #{token.value}
              td #{token.description}
              td #{token.points}
  include includes/sponsors
    
