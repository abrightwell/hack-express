extends ../admin_layout

block admin_content
  form(method='post', action='/admin/hints')
      fieldset
          legend Create New Hint
          label Title
          input(type="text", name="title", placeholder="Enter Hint Title", value="#{hint.title}", autofocus)
          label Description
          textarea(name="description", rows="5", placeholder="Enter Hint Description")
            | #{hint.description}
          div.form-actions
            button(type="submit").btn.btn-primary Create
            a(href="/admin/hints", style="margin-left: 5px", type="cancel").btn.btn-link Cancel
