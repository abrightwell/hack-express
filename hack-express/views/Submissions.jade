extends layout

block content
    h2 Submissions
    form#tokenInfo(method='post', action='/submissions/submit')
      label(for='tokenID') Token iD:  
      input#tokenID(type='password', name='tokenID', tabindex='1', required='true/')
    button#submit(type='submit', form='tokenInfo', name='tokenSubmit', value='Submit', tabindex='2') Submit
   
    div
      table
        thead
          tr
            th Token
            th Description
            th Points
        tbody
          each token in tokens
            tr
              td #{token.token_value}
              td #{token.description}
              td #{token.points}